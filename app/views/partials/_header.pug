header.header
  nav.nav.navbar.header__navbar
    .container
      .row.justify-content-between.align-items-center
        .col-24.col-md-7.col-lg-4
          .nav__box
            a.nav__lang.nav__lang--ru(href="index.html", class=content.site.lang === "ru" ? "nav__lang--active" : undefined) RU
            a.nav__lang.nav__land--en(href="indexEN.html", class=content.site.lang === "en" ? "nav__lang--active" : undefined) EN
        .col-24.col-md-5.col-lg-4
          .logo.nav__logo
            img.img-fluid(src!=page.nav.logo.src, alt!=page.nav.logo.alt)
        .col-24.col-md-7.col-lg-4
          .nav__contact.contact
            a.nav__call(data-toggle="modal", href="#modal__call")
              i.ic.ic--phone
            a.contact__text(href!=page.nav.contact.href)!=page.nav.contact.text
  .container
    .row
      .col-24
        h2.header__subtitle!=page.header.subtitle
        h1.header__title!=page.header.title  
        if (page.header.btn) 
          .button-group.header__button-group
            a.button.button--green.header__btn(href=page.header.btn.href)!= page.header.btn.text

